<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SpotReportActivity">

    <EditText
            android:layout_width="309dp"
            android:layout_height="232dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextIcident" android:layout_marginBottom="116dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSend" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.967"
            android:layout_marginStart="60dp" app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="287dp"
            android:layout_height="276dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/photoimageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextIcident" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary" app:layout_constraintVertical_bias="0.901"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.481"/>
    <Button
            android:text="TakePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPicture" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.967"
            app:layout_constraintStart_toEndOf="@+id/buttonSend" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.766"/>
</androidx.constraintlayout.widget.ConstraintLayout>